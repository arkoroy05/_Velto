{
  "name": "velto-memory-backend",
  "version": "1.0.0",
  "description": "Velto Memory Backend - Serverless backend with MCP server for AI context management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:setup": "node test-setup.js",
    "test:api": "node test/test-all-apis.js",
    "test:api:watch": "nodemon --exec 'node test/test-all-apis.js' --watch test/",
    "test:ai": "node test/test-ai-functionality.js",
    "test:ai:watch": "nodemon --exec 'node test/test-ai-functionality.js' --watch test/",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "mcp:dev": "tsx watch src/mcp/server.ts",
    "mcp:build": "tsc src/mcp/server.ts --outDir dist/mcp",
    "mcp:start": "node dist/mcp/server.js"
  },
  "keywords": [
    "velto",
    "memory",
    "mcp",
    "ai",
    "context",
    "serverless",
    "mongodb"
  ],
  "author": "Velto Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "@google/genai": "^1.14.0",
    "@google/generative-ai": "^0.21.0",
    "@langchain/anthropic": "^0.1.0",
    "@langchain/openai": "^0.0.14",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "anthropic-ai": "^0.0.10",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.1.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "rate-limiter-flexible": "^4.0.1",
    "redis": "^4.6.10",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
