{
    "modal": {
      "container": {
        "position": "fixed",
        "top": "0",
        "left": "0",
        "width": "100vw",
        "height": "100vh",
        "backgroundColor": "rgba(0, 0, 0, 0.5)",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "zIndex": 1000,
        "backdropFilter": "blur(4px)"
      },
      "content": {
        "width": "90vw",
        "maxWidth": "1200px",
        "height": "80vh",
        "maxHeight": "800px",
        "backgroundColor": "#ffffff",
        "borderRadius": "12px",
        "boxShadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
        "display": "flex",
        "flexDirection": "column",
        "overflow": "hidden",
        "position": "relative"
      },
      "header": {
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "padding": "16px 20px",
        "borderBottom": "1px solid #e5e7eb",
        "backgroundColor": "#ffffff",
        "minHeight": "64px"
      },
      "headerLeft": {
        "display": "flex",
        "alignItems": "center",
        "gap": "12px"
      },
      "icon": {
        "width": "32px",
        "height": "32px",
        "borderRadius": "8px",
        "backgroundColor": "#3b82f6",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "color": "#ffffff",
        "fontSize": "16px",
        "fontWeight": "600"
      },
      "title": {
        "fontSize": "18px",
        "fontWeight": "600",
        "color": "#111827",
        "lineHeight": "1.25"
      },
      "subtitle": {
        "fontSize": "14px",
        "color": "#6b7280",
        "marginTop": "2px"
      },
      "headerRight": {
        "display": "flex",
        "alignItems": "center",
        "gap": "8px"
      },
      "actionButton": {
        "padding": "8px 12px",
        "borderRadius": "6px",
        "fontSize": "14px",
        "fontWeight": "500",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "border": "1px solid transparent",
        "display": "flex",
        "alignItems": "center",
        "gap": "4px"
      },
      "primaryButton": {
        "backgroundColor": "#3b82f6",
        "color": "#ffffff",
        "border": "1px solid #3b82f6"
      },
      "secondaryButton": {
        "backgroundColor": "transparent",
        "color": "#6b7280",
        "border": "1px solid #d1d5db"
      },
      "iconButton": {
        "padding": "8px",
        "borderRadius": "6px",
        "backgroundColor": "transparent",
        "border": "none",
        "color": "#6b7280",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center"
      },
      "body": {
        "flex": "1",
        "display": "flex",
        "flexDirection": "column",
        "overflow": "hidden"
      },
      "toolbar": {
        "display": "flex",
        "alignItems": "center",
        "padding": "12px 20px",
        "borderBottom": "1px solid #e5e7eb",
        "backgroundColor": "#f9fafb",
        "gap": "4px",
        "flexWrap": "wrap"
      },
      "toolbarGroup": {
        "display": "flex",
        "alignItems": "center",
        "gap": "2px",
        "padding": "4px",
        "borderRadius": "6px",
        "backgroundColor": "#ffffff",
        "border": "1px solid #e5e7eb"
      },
      "toolbarButton": {
        "width": "32px",
        "height": "32px",
        "borderRadius": "4px",
        "border": "none",
        "backgroundColor": "transparent",
        "color": "#374151",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "fontSize": "14px",
        "fontWeight": "500"
      },
      "toolbarButtonActive": {
        "backgroundColor": "#3b82f6",
        "color": "#ffffff"
      },
      "toolbarSeparator": {
        "width": "1px",
        "height": "20px",
        "backgroundColor": "#d1d5db",
        "margin": "0 4px"
      },
      "editor": {
        "flex": "1",
        "padding": "20px",
        "backgroundColor": "#ffffff",
        "overflow": "auto",
        "fontSize": "16px",
        "lineHeight": "1.5",
        "color": "#111827",
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
      },
      "footer": {
        "padding": "16px 20px",
        "borderTop": "1px solid #e5e7eb",
        "backgroundColor": "#f9fafb",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "minHeight": "64px"
      },
      "footerLeft": {
        "display": "flex",
        "alignItems": "center",
        "gap": "12px"
      },
      "footerRight": {
        "display": "flex",
        "alignItems": "center",
        "gap": "8px"
      },
      "statusText": {
        "fontSize": "14px",
        "color": "#6b7280"
      }
    },
    "responsive": {
      "mobile": {
        "modal.content.width": "95vw",
        "modal.content.height": "90vh",
        "modal.header.padding": "12px 16px",
        "modal.toolbar.padding": "8px 16px",
        "modal.editor.padding": "16px",
        "modal.footer.padding": "12px 16px",
        "modal.toolbar.flexWrap": "wrap",
        "modal.toolbarGroup.gap": "1px"
      },
      "tablet": {
        "modal.content.width": "85vw",
        "modal.content.height": "85vh"
      }
    },
    "animations": {
      "modalEnter": {
        "from": {
          "opacity": "0",
          "transform": "scale(0.95)"
        },
        "to": {
          "opacity": "1",
          "transform": "scale(1)"
        },
        "duration": "200ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "modalExit": {
        "from": {
          "opacity": "1",
          "transform": "scale(1)"
        },
        "to": {
          "opacity": "0",
          "transform": "scale(0.95)"
        },
        "duration": "150ms",
        "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "buttonHover": {
        "transform": "translateY(-1px)",
        "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "duration": "200ms"
      }
    },
    "states": {
      "hover": {
        "iconButton": {
          "backgroundColor": "#f3f4f6"
        },
        "toolbarButton": {
          "backgroundColor": "#f3f4f6"
        },
        "primaryButton": {
          "backgroundColor": "#2563eb"
        },
        "secondaryButton": {
          "backgroundColor": "#f9fafb"
        }
      },
      "active": {
        "toolbarButton": {
          "backgroundColor": "#3b82f6",
          "color": "#ffffff"
        }
      },
      "disabled": {
        "opacity": "0.5",
        "cursor": "not-allowed",
        "pointerEvents": "none"
      }
    },
    "variants": {
      "sizes": {
        "small": {
          "modal.content.width": "400px",
          "modal.content.height": "300px"
        },
        "medium": {
          "modal.content.width": "600px",
          "modal.content.height": "500px"
        },
        "large": {
          "modal.content.width": "800px",
          "modal.content.height": "600px"
        },
        "fullscreen": {
          "modal.content.width": "100vw",
          "modal.content.height": "100vh",
          "modal.content.borderRadius": "0"
        }
      },
      "themes": {
        "light": {
          "modal.content.backgroundColor": "#ffffff",
          "modal.toolbar.backgroundColor": "#f9fafb",
          "modal.editor.backgroundColor": "#ffffff",
          "modal.footer.backgroundColor": "#f9fafb"
        },
        "dark": {
          "modal.content.backgroundColor": "#1f2937",
          "modal.toolbar.backgroundColor": "#111827",
          "modal.editor.backgroundColor": "#1f2937",
          "modal.footer.backgroundColor": "#111827",
          "modal.title.color": "#ffffff",
          "modal.editor.color": "#ffffff"
        }
      }
    }
  }